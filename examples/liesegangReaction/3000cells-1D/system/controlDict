FoamFile
{
    version         2;
    format          ascii;
    class           dictionary;
    location        "system";
    object          controlDict;
}

application     porousScalarTransportFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         450000;

deltaT          1e-10;

writeControl    adjustableRunTime;

writeInterval   10000;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

adjustTimeStep  yes;

runTimeModifiable true;

truncationError 0.01;

maxDeltaT       20;

CSVoutput       false;

eventTimeTracking true;

variationMax    0.05;

kValueTauD		50000;

expansionRatio	20;

